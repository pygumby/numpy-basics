{
    // Font
    "editor.fontFamily": "Berkeley Mono, JetBrains Mono, Menlo, monospace",
    "editor.fontSize": 13,
    "terminal.integrated.fontFamily": "Berkeley Mono, JetBrains Mono, Menlo, monospace",
    "terminal.integrated.fontSize": 13,

    // Indentation
    "editor.detectIndentation": false,
    "editor.insertSpaces": true,
    "editor.tabSize": 4,

    // Line length
    "editor.rulers": [ 88 ],

    // Whitespace
    "editor.renderWhitespace": "boundary",

    // Various
    "explorer.sortOrder": "type",

    // Python
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.formatOnSave": true
    }
}
